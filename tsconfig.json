{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "target": "es2021",
    "module": "CommonJS",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
